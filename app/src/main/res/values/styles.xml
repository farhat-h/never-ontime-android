<resources>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryDark">@color/light_primary</item>
        <item name="colorAccent">@color/light_secondary</item>
        <item name="background">@color/light_background</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="titleTextColor"> @color/light_text_primary</item>
        <item name="subtitleTextColor">@color/light_text_secondary</item>

    </style>
    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_secondary</item>
        <item name="colorAccent">@color/dark_primary</item>
        <item name="background">@color/dark_background</item>
        <item name="subtitleTextColor"> @color/dark_text_secondary</item>
        <item name="titleTextColor">@color/dark_text_primary</item>
    </style>

    <style name="text_header">
        <item name="fontFamily">@font/black</item>
        <item name="android:textSize">36sp</item>
    </style>
    <style name="text_body">
        <item name="fontFamily">@font/book</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="session_text">
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">16sp</item>
        <item name="color">@color/td_text</item>
    </style>
    <style name="session_type">
        <item name="fontFamily">@font/black</item>
        <item name="android:textSize">24sp</item>
        <item name="color">@color/td_background_dark</item>
    </style>

</resources>
